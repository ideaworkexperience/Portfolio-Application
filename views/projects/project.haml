%article.project
  %h3
    %a{:href => "/project/#{project.id}"} 
      = project.name

  %img{:src => project.image_url, :alt => "#{project.name} Project image"}
  %p
    = project.description
    
  - if project.project_url
    %a{:href => project.project_url}
  %p
    = "Created on #{project.date_created.to_date.to_s}"
  
  - if signed_in? && project.user_id == current_user.id
    %a(href="/project/#{project.id}/edit") Edit
    
    %form.delete-project-form{:method => 'delete', :action => "/project/#{project.id}"}
      %input{:id => 'delete_submit', :type => 'submit', :value => 'Delete', :name => 'commit'}
